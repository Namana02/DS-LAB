#include<stdio.h>
int a[10], pos, elem;
int n = 0;
void create( )
{
 int i;
 printf("\nEnter the number of elements: ");
 scanf("%d", &n);
 printf("\nEnter the elements: ");
 for(i=0; i<n; i++)
 {
 scanf("%d", &a[i]);
 }
}
void display()
{
int i;
 printf("\nArray elements are: ");
 for(i=0; i<n;i++)
 printf("%d\t ", a[i]);
}
void insert( )
{
 int i;

 printf("\nEnter a valid position where element to be inserted: ");
 scanf("%d", &pos);
 printf("\nEnter the value to be inserted: ");
 scanf("%d", &elem);
 for(i=n-1; i>=pos ; i--)
 {
 a[i+1] = a[i];
 }
 a[pos] = elem;
 n = n+1;
 display( );
}
void delete( )
{
 int i;
 printf("\nEnter a valid position from where element to be deleted: ");
 scanf("%d", &pos);
 elem = a[pos];
printf("\nDeleted element is : %d \n", elem);
 for( i = pos; i< n-1; i++)
 {
 a[i] = a[i+1];
 }
 n = n-1;
 display( );
}
int main( )
{
 int choice;
 while(1)
 {
 printf("\n\n~~~~MENU~~~~");
 printf("\n=>1. Create\n 2.Display\n 3.Insert\n 4.Delete\n 5.Exit\n‚Äù);
 printf("\n Enter your choice: ");
 scanf("%d", &choice);
 switch(choice)
 {
 case 1: create( );
 break;
 case 2: display( );
 break;
 case 3: insert( );
 break;
 case 4: delete( );
 break;
 case 5: exit(0);
 }
 }
}
